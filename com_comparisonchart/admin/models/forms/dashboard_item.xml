<?xml version="1.0" encoding="utf-8"?>
<form
    addfieldpath="/administrator/components/com_comparisonchart/models/fields"
>
   <fieldset
        name="general"
        label="COM_COMPARISONCHART_FIELDSET_DETAILS"
    >
        <field	name="id" type="hidden" />
        <field
            name="title"
            type="text"
            label="COM_COMPARISONCHART_SETTINGS_TITLE_TEXT"
            labelclass="control-label"
            size="40"
            class="inputbox"
            required="true"
            default=""
        />
		
        <field
            name="icon"
            type="text"
            label="COM_CHART_DASHBOARD_ITEM_ICON"
            labelclass="control-label"
            size="40"
            class="inputbox"
            required="true"
            default=""
        />
        <field
               name="url"
               type="text"
               label="COM_CHART_DASHBOARD_ITEM_URL"
               labelclass="control-label"
               size="40"
               class="inputbox"
               required="true"
               default=""
               />
        <field
            name="published"
            type="radio"
             label="JSTATUS"
            class="btn-group"
            default="1"
            labelclass="control-label">
            <option
                value="0">JUNPUBLISHED</option>
            <option
                value="1">JPUBLISHED</option>
        </field>
    </fieldset>
</form>